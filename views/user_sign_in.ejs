<link rel="stylesheet" href="/css/sign_in.css">

<h1 class="page-title">Sign In</h1>

<form class="sign-in-content" action="/users/create-session" method="post">
    <input type="email" name="email" id="email" placeholder="Your Email Address" required />
    <input type="password" name="password" id="password" placeholder="Your Password" required />
    <input type="submit" value="Login" />
    <a class="auth-page-button" href="/users/sign-up">
        <button type="button">
            Sign Up
        </button>
    </a>
</form>

<p class="sign-in-content">
    <a class="btn-google-sign-in" href="/users/auth/google">Sign In with Google</a>
</p>