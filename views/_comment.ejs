<li id="comment-<%= comment.id %>">
    <p>
        <%= comment.content %> 
        <small><%= comment.user.name %></small>
        <% if (locals.user && locals.user.id === comment.user.id) { %>
            <small><a class="delete-comment-button" href="/comments/delete/<%= comment.id %>">delete-comment</a></small>
        <% } %>
    </p>
</li>